{
  "name": "resgate-prime",
  "version": "1.0.0",
  "description": "Sistema de doações PIX → USDT com conversão automática",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "db:generate": "dotenv -e .env.local -- prisma generate",
    "db:push": "dotenv -e .env.local -- prisma db push",
    "db:studio": "dotenv -e .env.local -- prisma studio",
    "db:migrate": "dotenv -e .env.local -- prisma migrate dev",
    "db:deploy": "dotenv -e .env.local -- prisma migrate deploy",
    "db:pull": "dotenv -e .env.local -- prisma db pull",
    "setup:neon": "bash scripts/setup-neon.sh",
    "test:webhook": "bash scripts/test-webhook.sh",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.9.0",
    "@prisma/adapter-neon": "^5.18.0",
    "@prisma/client": "^5.18.0",
    "@upstash/redis": "^1.34.0",
    "@vercel/analytics": "^1.3.0",
    "axios": "^1.7.0",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "decimal.js": "^10.4.3",
    "geist": "^1.3.0",
    "lucide-react": "^0.400.0",
    "next": "^14.2.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "tailwind-merge": "^2.4.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "4.1.17",
    "@types/node": "^20.14.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "dotenv-cli": "^11.0.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "prisma": "^5.18.0",
    "tailwindcss": "4.1.17",
    "typescript": "^5.5.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}